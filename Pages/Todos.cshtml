@page
@model TodosModel
@{
    ViewData["Title"] = "My Todos";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <p>Manage your todo items and stay organized!</p>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success" role="alert">
            @Model.Message
        </div>
    }

    <!-- Add New Todo Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">‚ú® Add New Todo</h5>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NewTodo.Title" class="form-label"></label>
                    <input asp-for="NewTodo.Title" class="form-control" placeholder="Enter todo title" />
                    <span asp-validation-for="NewTodo.Title" class="text-danger"></span>
                </div>
                
                <div class="col-md-6">
                    <label asp-for="NewTodo.Description" class="form-label"></label>
                    <input asp-for="NewTodo.Description" class="form-control" placeholder="Enter description (optional)" />
                    <span asp-validation-for="NewTodo.Description" class="text-danger"></span>
                </div>
                
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Todo
                    </button>
                    <a asp-page="/Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Todos List -->
    <div class="row">
        <div class="col-12">
            <h3>üìã Your Todos (@Model.Todos.Count)</h3>
            
            @if (Model.Todos.Any())
            {
                <div class="row">
                    <!-- Active Todos -->
                    <div class="col-md-6">
                        <h5 class="text-primary">üöÄ Active (@Model.Todos.Count(t => !t.IsCompleted))</h5>
                        @foreach (var todo in Model.Todos.Where(t => !t.IsCompleted).OrderByDescending(t => t.CreatedAt))
                        {
                            <div class="card mb-2 border-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1">@todo.Title</h6>
                                            @if (!string.IsNullOrEmpty(todo.Description))
                                            {
                                                <p class="card-text text-muted small mb-2">@todo.Description</p>
                                            }
                                            <small class="text-muted">Created: @todo.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                        <div class="btn-group-vertical ms-2" role="group">
                                            <form method="post" asp-page-handler="ToggleComplete" class="d-inline">
                                                <input type="hidden" name="id" value="@todo.Id" />
                                                <button type="submit" class="btn btn-outline-success btn-sm" title="Mark as Complete">
                                                    ‚úì
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this todo?')">
                                                <input type="hidden" name="id" value="@todo.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    üóëÔ∏è
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (!Model.Todos.Any(t => !t.IsCompleted))
                        {
                            <div class="alert alert-info" role="alert">
                                üéâ No active todos! Great job staying on top of things!
                            </div>
                        }
                    </div>

                    <!-- Completed Todos -->
                    <div class="col-md-6">
                        <h5 class="text-success">‚úÖ Completed (@Model.Todos.Count(t => t.IsCompleted))</h5>
                        @foreach (var todo in Model.Todos.Where(t => t.IsCompleted).OrderByDescending(t => t.CompletedAt))
                        {
                            <div class="card mb-2 border-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1 text-decoration-line-through text-muted">@todo.Title</h6>
                                            @if (!string.IsNullOrEmpty(todo.Description))
                                            {
                                                <p class="card-text text-muted small mb-2">@todo.Description</p>
                                            }
                                            <small class="text-muted">
                                                Completed: @todo.CompletedAt?.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        </div>
                                        <div class="btn-group-vertical ms-2" role="group">
                                            <form method="post" asp-page-handler="ToggleComplete" class="d-inline">
                                                <input type="hidden" name="id" value="@todo.Id" />
                                                <button type="submit" class="btn btn-outline-warning btn-sm" title="Mark as Incomplete">
                                                    ‚Ü∂
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this todo?')">
                                                <input type="hidden" name="id" value="@todo.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    üóëÔ∏è
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        
                        @if (!Model.Todos.Any(t => t.IsCompleted))
                        {
                            <div class="alert alert-secondary" role="alert">
                                üìù No completed todos yet. Start completing some tasks!
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <h5>üìù No todos yet!</h5>
                    <p class="mb-0">Create your first todo item using the form above to get started.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}